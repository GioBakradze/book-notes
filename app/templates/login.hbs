<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">

            <br><br>

            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    Please Sign In
                </div>
                <div class="panel-body">
                    <form onsubmit={{action 'formSubmit'}}>
                        <div class="form-group">
                            {{input placeholder="Email" name="email" value=email type="email" class="form-control"}}
                        </div>
                        <div class="form-group">
                            {{input placeholder="Password" name="password" value=password type="password" class="form-control"}}
                        </div>
                        <input type="submit" name="login" value="Login" class="btn btn-lg btn-success btn-block">
                    </form>

                    <br>

                    {{#if loginFailed}}
                        <div class="alert alert-danger">
                            Invalid username or password
                        </div>
                    {{/if}}
                </div>
            </div>

        </div>
    </div>
</div>
