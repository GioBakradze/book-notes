<div class="panel panel-info book-card {{if isZoomed 'book-card--zoomed'}}" onclick={{action 'zoomCard'}}>
    <div class="panel-heading">
        {{title}}
    </div>
    <div class="panel-body">
        <ul>
            {{#each notes as |note|}}
                <li>{{note}}</li>
            {{/each}}
        </ul>
    </div>
</div>
